<%- include('../partials/head.ejs') %>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
<link rel="stylesheet" href="/Registration/Organization_Registration.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Gloock">
<script src="/Registration/Organization_Registration.js" defer></script>
<script src="https://kit.fontawesome.com/dd74aaab55.js" crossorigin="anonymous" defer></script>


</head>

<body>
    <div class="container-1">
        <div class="image-container">
            <img src="/ORGANIZATIONS/images/organization.avif" alt="">
        </div>
        <div class="main-body">
            <h2>Register Your Organization</h2>
            <form action="/Register_Organization" method="post">
                <div class="form-floating mt-3 mb-3">
                    <input type="text" class="form-control" id="organization-name" name="organizationName" onkeyup="nameValidation()" placeholder=" " required>
                    <label for="organization-name" class="form-label">Organization Name</label>
                    <span class="error ms-1" id="nameError"></span>
                </div>
                <div class="form-floating mt-3 mb-3">
                    <input type="email" class="form-control" id="organization-email" name="organizationEmail" onkeyup="emailValidation()" placeholder=" " required>
                    <label for="organization-email" class="form-label">Organization Email</label>
                    <span class="error ms-1" id="emailError"></span>
                </div>
                <div class="form-floating mt-3 mb-3">
                    <input type="password" class="form-control" id="password" name="password" onkeyup="passwordValidation()" placeholder=" " required>
                    <label for="password" class="form-label">Password</label>
                    <span class="error ms-1" id="passwordError"></span>
                </div>

                <div class="form-floating mt-3 mb-3">
                    <input type="password" class="form-control" id="cpassword" name="cpassword" onkeyup="confirmPassword()" placeholder=" " required>
                    <label for="password" class="form-label">Confirm Password</label>
                </div>
               
                <div class="form-floating mt-3 mb-3">
                    <input type="text" class="form-control" id="location" name="location"onkeyup="locationValidation()" placeholder=" " required>
                    <label for="location" class="form-label">Address</label>
                    <span class="error ms-1" id="locationError"></span>
                </div>
    
                <div class="mt-4 mb-3">
                    <button type="submit">Register</button>
                </div>
            </form>

            <div class="mt-3">
                <p>Already have an account? <a href="/Organization_Login" style="text-decoration: none; color: darkgoldenrod;">Login Here</a></p>
            </div>
        </div>
    </div>
    
</body>
